<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/detail_large_margin"
        android:paddingRight="@dimen/detail_large_margin"
        android:background="@color/detail_primary"
        android:textSize="@dimen/detail_title"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"/>

   <ImageView
       android:id="@+id/detail_poster"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:layout_margin="@dimen/detail_large_margin"
       android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_large_margin"
        android:layout_marginRight="@dimen/detail_large_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/detail_large_margin"
            android:gravity="center"
            android:textSize="@dimen/detail_release_date"/>

        <TextView
            android:id="@+id/detail_runtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/detail_large_margin"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="italic"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="@dimen/detail_large_margin">

        <TextView
            android:id="@+id/detail_synopsis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceMedium"/>
    </ScrollView>
</LinearLayout>