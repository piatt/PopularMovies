<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MovieInfo" parent="android:TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SectionLabel" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="IconText" parent="android:TextAppearance">
        <item name="fontPath">@string/icon_font_path</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegularText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BoldText" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>